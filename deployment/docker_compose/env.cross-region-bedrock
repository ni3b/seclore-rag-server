# Cross-Region Bedrock Configuration
# This enables cross-region inference for Claude Sonnet 4

# AWS Configuration for Cross-Region Inference
AWS_REGION_NAME=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Optional: Use IAM roles instead of access keys
USE_IAM_AUTH=true

# Bedrock Model Configuration
# The model ID below enables cross-region inference
# Routes between us-east-1, us-east-2, and us-west-2
BEDROCK_DEFAULT_MODEL=us.anthropic.claude-sonnet-4-20250514-v1:0

# Enable cross-region inference features
ENABLE_CROSS_REGION_INFERENCE=true

# Logging for cross-region inference monitoring
LOG_BEDROCK_CROSS_REGION=true 